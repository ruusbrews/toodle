{
  "name": "toodle",
  "version": "1.0.0",
  "description": "A desktop to-do list app with custom timer",
  "author": "ruusbrews",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.ruusbrews.toodle",
    "productName": "Toodle",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/toodle_logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "todo",
    "timer",
    "desktop"
  ],
  "license": "ISC",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^26.4.0"
  }
}
